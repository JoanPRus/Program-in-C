{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "GCC - Compilar y Depurar",
          "type": "cppdbg",
          "request": "launch",
          "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",  // Cambia esta ruta a gdb.exe, no gcc.exe
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "preLaunchTask": "Build C Program",
          "internalConsoleOptions": "openOnSessionStart"
      }
  ]
}
